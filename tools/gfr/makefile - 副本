CFILES		= gfr.c
CPPFILES	= im/im.cpp im/vhd.cpp
OBJ			= $(CPPFILES:.cpp=.o) $(CFILES:.c=.o)

LDFLAGS := -Wall -O2
CPPFLAGS := -I C:/MinGW/include
CFLAGS := -I C:/MinGW/include

export CFILES
export CPPFILES
export LDFLAGS
export CFLAGS
export CPPFLAGS

all:
	$(CC) -c CFILES $(CFLAGS)
	$(CC) -c CFILES $(CFLAGS)
	
	
clean:
	$(RM) gfr.exe
